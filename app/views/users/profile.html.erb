<h4>(Add a new Item)</h4>
<%= form_for @new_item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> 

 <%= f.label :author %>
  <%= f.text_field :author %>

   <%= f.label :description %>
  <%= f.text_field :description %>  

<%= f.submit :submit, class: 'btn btn-primary' %>
<%end %>


