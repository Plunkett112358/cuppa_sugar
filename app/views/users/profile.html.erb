<section id='user-info'>

  <img style= "width: 100px" src="<%= current_user.image_url %>"/></br>
  <%= current_user.name %></br>
  <%= current_user.bio %></br>
  <%= current_user.city %>,
  <%= current_user.state %>

 </section>


<!-- my borrows table
 -->

<h1>Books I've Borrowed</h1>
<table class="table table-bordered table-hover">
<section id='user-borrows'>
<thead>
  <tr>
      <td>Title</td>
      <td>Author</td>
      <td>Description</td>
      <td>Date</td>
    </tr>

</thead>
<tbody>
  <tr>
  <% @my_borrows.each do |borrow| %>

    <td><%= borrow.item.name%></td>
    <td><%= borrow.item.author %></td>
    <td><%= borrow.item.description %></td>
    <td><%= borrow.created_at.strftime("Borrowed on %m/%d/%Y") %></td>
<% end %>
<tr>
</tbody></table>
</section> 




<!-- My Items Currently Being borrowed
 -->

 <h1>Books of Mine Currently Being Borrowed</h1>
<table class="table table-bordered table-hover">
<section id='user-borrows'>
<thead>
